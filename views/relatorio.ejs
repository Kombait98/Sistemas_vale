<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <title>Conferência de Valores</title>
</head>
<body class="container mt-5">
    <h2>Conferência de Valores</h2>

    <div class="card my-4 shadow-sm">
        <div class="card-body">
            <form action="/relatorio" method="GET" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Filtrar por Usuário</label>
                    <select name="usuario" class="form-select">
                        <option value="">Todos os Colaboradores</option>
                        <% usuarios.forEach(u => { %>
                            <option value="<%= u.nome %>" <%= filtroUsuario === u.nome ? 'selected' : '' %> >
                                <%= u.nome %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Filtrar por Mês</label>
                    <input type="month" name="mes" class="form-control" value="<%= filtroMes %>">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filtrar</button>
                    <a href="/relatorio" class="btn btn-link text-decoration-none">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped">
        <thead class="table-dark">
    <tr>
        <th>Usuário</th>
        <th>Data</th>
        <th>Trajeto</th>
        <th>Total</th>
        <th>Status</th> <th>Ações</th>
    </tr>
</thead>
<tbody>
    <% registros.forEach(r => { %>
        <tr class="<%= r.pago === 1 ? 'table-success' : '' %>"> 
            <td><%= r.usuario %></td>
            <td><%= r.data %></td>
            <td>
        <%= r.nome_saida %> -> <%= r.nome_chegada %>
    <% if (r.motivo) { %>
        <i class="bi bi-chat-right-text text-info ms-1" 
           style="cursor: pointer;"
           data-bs-toggle="tooltip" 
           title="<%= r.motivo %>"></i>
    <% } %>
    </td>
            <td><strong>R$ <%= r.total_linha.toFixed(2) %></strong></td>
            <td>
                <% if (r.pago === 1) { %>
                    <span class="badge bg-success">Pago</span>
                <% } else { %>
                    <span class="badge bg-warning text-dark">Pendente</span>
                <% } %>
            </td>
            <td>
    <form action="/vales/alternar-pagamento/<%= r.id %>" method="POST">
        <button type="submit" class="btn btn-sm <%= r.pago === 1 ? 'btn-secondary' : 'btn-success' %> w-100">
            <%= r.pago === 1 ? 'Estornar' : 'Confirmar Pagamento' %>
        </button>
    </form>
</td>
        </tr>
    <% }) %>
</tbody>
    </table>

    <div class="alert alert-info d-flex justify-content-between">
        <h4>Total do Período/Filtro:</h4>
        <h4>R$ <%= totalGeral.toFixed(2) %></h4>
    </div>
    <div class="row mt-4">
    <div class="col-md-4">
        <div class="card bg-light p-3">
            <h6>Total Geral</h6>
            <h4 class="text-primary">R$ <%= totalGeral.toFixed(2) %></h4>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light p-3">
            <h6>Total Pago</h6>
            <h4 class="text-success">R$ <%= totalPago.toFixed(2) %></h4>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light p-3">
            <h6>Ainda Pendente</h6>
            <h4 class="text-danger">R$ <%= totalPendente.toFixed(2) %></h4>
        </div>
    </div>
    </div>

    <div class="mb-5">
        <p></p>
        <a href="/" class="btn btn-secondary">Voltar ao Cadastro</a>
    </div>
</body>
<script>
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
    const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
</script>
</html>