<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <title>Relatório de Conferência</title>
</head>
<body class="container-fluid mt-1">
    <%- include('partials/navbar') %>
    <h2>Gerenciar Unidades</h2>
    <form action="/unidades/novo" method="POST" class="row g-3 mb-4">
        <div class="col-md-3"><input type="text" name="sigla" class="form-control" placeholder="Sigla (EX: SPO)" required></div>
        <div class="col-md-6"><input type="text" name="nome" class="form-control" placeholder="Nome Completo (EX: São Paulo - Matriz)" required></div>
        <div class="col-md-3"><button type="submit" class="btn btn-success w-100">Cadastrar</button></div>
    </form>

    <table class="table">
        <thead><tr><th>Sigla</th><th>Nome</th><th>Ação</th></tr></thead>
        <tbody>
            <% unidades.forEach(u => { %>
                <tr>
                    <td><strong><%= u.sigla %></strong></td>
                    <td><%= u.nome %></td>
                    <td>
                        <form action="/unidades/deletar/<%= u.id %>" method="POST">
                            <button class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/" class="btn btn-primary">Voltar</a>
</body>