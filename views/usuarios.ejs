<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Gerenciar Usuários</title>
</head>
<body class="container-fluid mt-1">
    <%- include('partials/navbar') %>
    <h2>Gerenciar Usuários e Permissões</h2>

    <form action="/usuarios/novo" method="POST" class="row g-3 mb-5 p-3 border rounded bg-light">
        <div class="col-md-3">
            <input type="text" name="login" class="form-control" placeholder="Login (Usuário)" required>
        </div>
        <div class="col-md-3">
            <input type="text" name="nome" class="form-control" placeholder="Nome Completo" required>
        </div>
        <div class="col-md-3">
            <input type="password" name="senha" class="form-control" placeholder="Senha" required>
        </div>
        <div class="col-md-2">
            <select name="permissao" class="form-select">
                <option value="colaborador">Colaborador</option>
                <option value="admin">Gerente (Admin)</option>
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-success w-100">Add</button>
        </div>
    </form>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Login</th>
                <th>Permissão</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% usuarios.forEach(u => { %>
                <tr>
                    <td><%= u.nome %></td>
                    <td><%= u.login %></td>
                    <td>
                        <form action="/usuarios/editar-permissao/<%= u.id %>" method="POST" class="d-flex gap-2">
                            <select name="permissao" class="form-select form-select-sm" style="width: 140px;">
                                <option value="colaborador" <%= u.permissao === 'colaborador' ? 'selected' : '' %>>Colaborador</option>
                                <option value="admin" <%= u.permissao === 'admin' ? 'selected' : '' %>>Gerente</option>
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm">Salvar</button>
                        </form>
                    </td>
                    <td>
                        <% if (u.login !== 'admin') { %>
                            <form action="/usuarios/deletar/<%= u.id %>" method="POST" onsubmit="return confirm('Excluir usuário?')">
                                <button class="btn btn-outline-danger btn-sm">Excluir</button>
                            </form>
                        <% } else { %>
                            <span class="text-muted small">Protegido</span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <a href="/" class="btn btn-secondary">Voltar</a>
</body>
</html>