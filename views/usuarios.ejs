<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Gerenciar Usuários</title>
</head>
<body class="container mt-5">
    <h2>Cadastrar Novo Usuário</h2>
    <form action="/usuarios/novo" method="POST" class="row g-3 mb-5">
        <div class="col-md-8">
            <input type="text" name="nome" class="form-control" placeholder="Nome Completo do Colaborador" required>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-success w-100">Adicionar Usuário</button>
        </div>
    </form>

    <h3>Usuários Cadastrados</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th style="width: 150px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        <% usuarios.forEach(u => { %>
            <tr>
                <td><%= u.nome %></td>
                <td>
                    <form action="/usuarios/deletar/<%= u.id %>" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir este usuário?')">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
    <hr>
    <a href="/" class="btn btn-primary">Voltar para Cadastro de Vales</a>
</body>
</html>