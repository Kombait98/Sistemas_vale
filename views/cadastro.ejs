<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Cadastro de Vales</title>
</head>
<body class="container mt-5">
    <h2>Cadastrar Vale de Passagem</h2>
    <form action="/cadastrar" method="POST" class="row g-3">
        <div class="col-md-6">
    <label>Usuário</label>
    <select name="usuario" class="form-select" required>
        <option value="">Selecione o colaborador...</option>
        <% usuarios.forEach(u => { %>
            <option value="<%= u.nome %>"><%= u.nome %></option>
        <% }) %>
    </select>
    <small><a href="/usuarios">Cadastrar novo usuário</a></small>
</div>
        <div class="col-md-6"><label>Data</label><input type="date" name="data" class="form-control" required></div>
        <div class="col-md-6">
    <label>Local de Saída</label>
    <select name="saida" class="form-select" required>
        <option value="">Selecione a Sigla...</option>
        <% unidades.forEach(u => { %>
            <option value="<%= u.id %>"><%= u.sigla %></option>
        <% }) %>
    </select>
</div>

<div class="col-md-6">
    <label>Local de Chegada</label>
    <select name="chegada" class="form-select" required>
        <option value="">Selecione a Sigla...</option>
        <% unidades.forEach(u => { %>
            <option value="<%= u.id %>"><%= u.sigla %></option>
        <% }) %>
    </select>
</div>
<small><a href="/unidades">Gerenciar Unidades</a></small>
        <div class="col-md-4"><label>Quantidade</label><input type="number" name="quantidade" class="form-control" required></div>
        <div class="col-md-4"><label>Valor Unitário (R$)</label><input type="number" step="0.01" name="valor" class="form-control" required></div>
        <div class="col-md-12"><label>Motivo</label><textarea name="motivo" class="form-control"></textarea></div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Salvar Vale</button>
            <a href="/relatorio" class="btn btn-secondary">Ver Relatório</a>
            <a href="/autorizacao" class="btn btn-secondary">Autorizar Vales</a>
        </div>
    </form>
</body>
</html>