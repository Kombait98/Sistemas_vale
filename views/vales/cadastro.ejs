<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Cadastro de Vales</title>
</head>
<body class="container-fluid mt-1">
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <h2 class="mb-4">Cadastrar Vale de Passagem</h2>
        
        <form action="/vales/cadastrar" method="POST" class="row g-3 shadow-sm p-4 border rounded bg-light">
            
<div class="col-md-6">
    <label class="form-label">Colaborador</label>
    <select name="usuario" class="form-select" required>
        <option value="">Selecione o colaborador...</option>
        <% usuarios.forEach(u => { %>
            <option value="<%= u.nome %>" <%= u.nome === usuarioLogado.nome ? 'selected' : '' %>>
                <%= u.nome %>
            </option>
        <% }) %>
    </select>
    <div class="mt-1">
        <small><a href="/usuarios" class="text-decoration-none text-muted">+ Cadastrar novo usuário</a></small>
    </div>
</div>

            <div class="col-md-6">
                <label class="form-label">Data</label>
                <input type="date" name="data" class="form-control" required>
            </div>

            <div class="col-md-6">
                <label class="form-label">Local de Saída</label>
                <select name="saida" class="form-select" required>
                    <option value="">Selecione a Unidade de Origem</option>
                    <% unidades.forEach(u => { %>
                        <option value="<%= u.id %>"><%= u.sigla %> - <%= u.nome %></option>
                    <% }) %>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Local de Chegada</label>
                <select name="chegada" class="form-select" required>
                    <option value="">Selecione a Unidade de Destino</option>
                    <% unidades.forEach(u => { %>
                        <option value="<%= u.id %>"><%= u.sigla %> - <%= u.nome %></option>
                    <% }) %>
                </select>
                <div class="mt-1">
                    <small><a href="/unidades" class="text-decoration-none">+ Gerenciar Unidades</a></small>
                </div>
            </div>

            <div class="col-md-4">
                <label class="form-label">Quantidade</label>
                <input type="number" name="quantidade" class="form-control" min="1" required>
            </div>

            <div class="col-md-4">
                <label class="form-label">Valor Unitário (R$)</label>
                <input type="number" step="0.01" name="valor" class="form-control" required>
            </div>

            <div class="col-md-12">
                <label class="form-label">Motivo do Deslocamento</label>
                <textarea name="motivo" class="form-control" rows="2" placeholder="Descreva brevemente o motivo..." required></textarea>
            </div>

            <div class="col-12 mt-4">
                <button type="submit" class="btn btn-primary px-4">Salvar Vale</button>
                <a href="/vales/relatorio" class="btn btn-outline-secondary ms-2">Ver Relatório</a>
                
                <% if (usuarioLogado.permissao === 'admin') { %>
                    <a href="/vales/autorizacao" class="btn btn-outline-warning ms-2">Autorizar Vales</a>
                <% } %>
            </div>
        </form>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>