<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <title>Gestão de Autorizações - Vales</title>
</head>
<body class="container-fluid mt-1">
    
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-0">Gestão e Histórico de Autorizações</h2>
                <p class="text-muted">Aprove ou recuse as solicitações de vales pendentes</p>
            </div>
            <a href="/vales/relatorio" class="btn btn-primary">
                <i class="bi bi-file-earmark-bar-graph"></i> Ir para Relatório
            </a>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Usuário</th>
                        <th>Data</th>
                        <th>Trajeto</th>
                        <th>Valor Total</th>
                        <th>Estado Atual</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% todosVales.forEach(v => { %>
                        <tr class="<%= v.status === 2 ? 'table-light opacity-75' : '' %>">
                            <td>
                                <strong><%= v.usuario %></strong>
                                <% if (v.motivo) { %>
                                    <i class="bi bi-chat-dots text-primary ms-1" 
                                       style="cursor: pointer;" 
                                       data-bs-toggle="tooltip" 
                                       data-bs-placement="top" 
                                       title="<%= v.motivo %>"></i>
                                <% } %>
                            </td>
                            <td><%= v.data %></td>
                            <td>
                                <small class="text-muted"><%= v.nome_saida %></small> 
                                <i class="bi bi-arrow-right mx-1"></i> 
                                <small class="text-muted"><%= v.nome_chegada %></small>
                            </td>
                            <td>R$ <%= (v.quantidade * v.valor_unitario).toFixed(2) %></td>
                            <td>
                                <% if (v.status === 0) { %>
                                    <span class="badge bg-warning text-dark">Pendente</span>
                                <% } else if (v.status === 1) { %>
                                    <span class="badge bg-success">Autorizado</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Recusado</span>
                                <% } %>
                            </td>
                            <td>
                                <div class="d-flex gap-1 justify-content-center">
                                    <% if (v.status !== 0) { %>
                                        <form action="/vales/status/<%= v.id %>/0" method="POST">
                                            <button class="btn btn-outline-warning btn-sm" title="Marcar como Pendente">
                                                <i class="bi bi-clock-history"></i>
                                            </button>
                                        </form>
                                    <% } %>

                                    <% if (v.status !== 1) { %>
                                        <form action="/vales/status/<%= v.id %>/1" method="POST">
                                            <button class="btn btn-outline-success btn-sm" title="Autorizar">
                                                <i class="bi bi-check-circle"></i>
                                            </button>
                                        </form>
                                    <% } %>

                                    <% if (v.status !== 2) { %>
                                        <form action="/vales/status/<%= v.id %>/2" method="POST">
                                            <button class="btn btn-outline-danger btn-sm" title="Recusar">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                    <% if (todosVales.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">Nenhum vale encontrado para autorização.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
        <div class="mt-4 mb-5">
            <a href="/vales" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar ao Cadastro
            </a>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Inicialização dos Tooltips do Bootstrap (para ver o motivo ao passar o mouse)
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
        });
    </script>
</body>
</html>